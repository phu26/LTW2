{{#if admin}}
<form>
<style>
  .header {
    display: flex;
    justify-content: space-between;
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#tbcats tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<div class="card">
  <div class="card-header">
    <div class="header">
        <h5> Category</h5>
        <input id="myInput" type="text" placeholder="Search..">
    </div>
  </div>
  <table name="tbCat" class="table table-hover table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Sub Categories</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success btn-sm" href="/categories/add" role="button" title="Add">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Category
          </a>
        </th>

      </tr>
    </thead>
    <tbody id="tbcats">
      {{#each lcCategories}}
      <tr class='clickable-row' data-href="/categories/edit/{{cat_id}}">
        <th scope="row">{{cat_id}}</th>
        <td>{{cat_name}}</td>
        <td>{{#each subcats}}{{subcat_name}}, {{/each}}</td>
        <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/categories/{{cat_id}}" role="button" title="Edit">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <a class="btn btn-success btn-sm" href="/categories/add/{{cat_id}}" role="button" title="Add Sub Category">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </a>
        </td>
      <script>
        $("#tbCat").on('click-row.bs.table', function (e, row, $element) {
    window.location = $element.data('href');});
      </script>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</form>
{{/if}}