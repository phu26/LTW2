 <div class="card">
  <div class="card-header">
      <h5>  Category</h5>
  
  </div>
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col" class="text-right">
        <a class="btn btn-outline-success btn-sm" href="/categories/add" role="button" title="Add" >
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Category
        </a>
      </th>
     
    </tr>
  </thead>
  <tbody>
        {{#each this.categories}}
        <tr>
      <th scope="row">{{CatID}}</th>
      <td>{{CatName}}</td>
      <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/categories/edit/{{CatID}}" role="button" title="Edit">
              <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
      </td>
   
    </tr>
        {{/each}}
    
 
   
  </tbody>
</table>
</div>