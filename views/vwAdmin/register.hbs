{{#section 'css'}}
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script>
  $(function () {

    $('#txtDOB').datetimepicker({
      // format: 'd/m/Y H:i'
      format: 'd/m/Y',
      timepicker: false,
      mask: true,
    });

    // $.validator.addMethod('validDate', function (value, element) {
    //   return this.optional(element) || moment(value, 'DD/MM/YYYY').isValid();
    // })

    $('#registerForm').validate({
      onkeyup: false,
      rules: {
        f_Username: {
          required: true,
          remote: {
            url: '/account/is-available',
            data: {
              user: function () {
                return $('#txtUsername').val();
              }
            }
          }
        },
        password: {
          required: true,
          minlength: 6
        },
        confirm: {
          required: true,
          equalTo: $('[name="password"]')
        },
        f_Name: {
          required: true,
        },
        f_Email: {
          required: true,
          email: true
        },
        dob: {
          required: true,
          // validDate: true
        },
      },
      messages: {
        f_Username: {
          required: 'Your username is required.',
          remote: 'Your username has been taken, please take another.'
        },
        password: {
          required: 'Your password is required.',
          minlength: 'Your password must have at least 6 characters.'
        },
        confirm: {
          required: 'Your password does not match.',
          equalTo: 'Your password does not match.'
        },
        f_Name: {
          required: 'Valid full name is required.',
        },
        f_Email: {
          required: 'Please enter a valid email address.',
          email: 'Please enter a valid email address.'
        },
        dob: {
          required: 'Valid date of birth is required.',
          // validDate: 'Please enter a valid date in the format DD/MM/YYYY'
        },
      },
      errorElement: 'small',
      errorClass: 'help-block text-danger',
      validClass: 'is-valid',
      highlight: function (e) {
        $(e).removeClass('is-valid').addClass('is-invalid');
      },
      unhighlight: function (e) {
        $(e).removeClass('is-invalid').addClass('is-valid');
      },
    });
  })
</script>
{{/section}}

<form novalidate action="" method="POST" id="registerForm">
  <div class="card shadow">
    <h5 class="card-header">
      Register
    </h5>
    <div class="card-body">
      <h5 class="mb-3">Account</h5>
      <div class="form-group">
        <label for="txtUsername">Username</label>
        <input type="text" class="form-control" id="txtUsername" name="f_Username">
      </div>
      <div class="form-group">
        <label for="txtPassword">Password</label>
        <input type="password" class="form-control" id="txtPassword" name="password">
      </div>
      <div class="form-group">
        <label for="txtConfirm">Confirm</label>
        <input type="password" class="form-control" id="txtConfirm" name="confirm">
      </div>

      <hr class="mb-4">
      <h5 class="mb-3">Information</h5>
      <div class="form-group">
        <label for="txtName">Name</label>
        <input type="text" class="form-control" id="txtName" name="f_Name">
      </div>
      <div class="form-group">
        <label for="txtEmail">Email</label>
        <input type="text" class="form-control" id="txtEmail" name="f_Email">
      </div>
      <div class="form-group">
        <label for="txtDOB">Date of birth</label>
        <input type="text" class="form-control" id="txtDOB" name="dob">
      </div>
    </div>
    <div class="card-footer text-right">
      <button type="submit" class="btn btn-lg btn-success btn-block">
        <i class="fa fa-check" aria-hidden="true"></i>
        Register
      </button>
    </div>
  </div>
</form>