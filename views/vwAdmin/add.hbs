<div class="main-panel">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            {{#if this.error}}
            <div class="alert alert-danger" role="alert">
              Invalid categoryId. <a href="/categories/{{CatID}}" class="alert-link">Back to Category</a>.
            </div>
            {{else}}
            <div class="card">
              <div class="card-header">
                <h3 class="title">Thêm danh mục</h3>      
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-6">
                    <form  method="POST">
                      <div class="form-group">
                        <label for="txtCatName">Category Name</label>
                        <input type="text" class="form-control" id="txtCatName" name="CatName" placeholder="name">
                        {{#if subcat}}
                        <input type="hidden" class="form-control" id="txtCatName" value="{{CatID}}" name="CatID"
                          placeholder="name">
                        {{/if}}
                      </div>
                      <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Save
                      </button>
                    </form>
                  </div>
                </div>

              </div>
            </div>
            {{/if}}
          </div>

        </div>
      </div>
    </div>
  </div>


</div>
</div>