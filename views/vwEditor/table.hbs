{{#if isAuthenticated}}
<div class="main-panel">
    <nav class="navbar navbar-default navbar-fixed">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Danh sách bài viết</a>
            </div>
            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <a href="/account/logout">
                            <p>Log out</p>
                        </a>
                    </li>
                    <li class="separator hidden-lg hidden-md"></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Bài Viết Draf</h4>
                            
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Người Đăng</th>
                                    <th class="text-right" >Trạng Thái</th>
                                </thead>
                                <tbody>
                                    
                                    {{#each prod5}}
                                    <tr>
                                        <td>{{ProID}}</td>
                                        <td>{{ProName}}</td>
                                        <td>{{f_Name}}</td>
                                        
                                       
                                          <td id="tt{{ProID}}"> {{TrangThai}}</td>
                                       
  <td id="edit{{ProID}}" class="text-right">
          <a class="btn btn-primary btn-sm" href="#" onClick="doSomething({{ProID}});" role="button" title="Edit">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
         
        </td>

                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>

                        </div>
                        
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">  Bài đã xử lí</h4>
                            
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Người Xử Lí</th>
                                    <th class="text-right" >Trạng Thái</th>
                                </thead>
                                <tbody>
                                    
                                    {{#each prod6}}
                                    <tr>
                                        <td>{{ProID}}</td>
                                        <td>{{ProName}}</td>
                                        <td>{{f_Name}}</td>
                                      
                                       
                                          <td id="ttt{{ProID}}"> {{TrangThai}}</td>
                                       
 

                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>

                        </div>
                        
                    </div>
                </div>
                

 <script>{{#each prod5}}
                                            var id=document.getElementById("tt{{ProID}}").innerText;
                                           
                                            if(id==0)
                                            document.getElementById("tt{{ProID}}").innerText ="Chưa duyệt";
                                            if(id==1)
                                            document.getElementById("tt{{ProID}}").innerText ="Đã duyệt";
                                            if(id==2)
                                            document.getElementById("tt{{ProID}}").innerText ="Đã từ chối";
                                            if(id==3)
                                            document.getElementById("tt{{ProID}}").innerText ="Đã xuất bản";
                                            if(id==4)
                                            document.getElementById("tt{{ProID}}").innerText ="Premium";
                                             
                                            if(id!=0)
                                            {
                                             
                                            document.getElementById("edit{{ProID}}").innerText =null;
                                            }

                                             
                                          {{/each}}
                                          {{#each prod6}}
                                            var id=document.getElementById("ttt{{ProID}}").innerText;
                                           
                                            
                                        
                                            
                                            if(id==2)
                                            document.getElementById("ttt{{ProID}}").innerText ="Đã từ chối";
                                           else
                                             document.getElementById("ttt{{ProID}}").innerText ="Đã duyệt";

                                           

                                             
                                          {{/each}}
                                          function doSomething(id) {
                                                   location.href = "/user/{{id}}/edit/"+id;
                                            }
                                        </script>



            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <nav class="pull-left">
                <ul>
                    <li>
